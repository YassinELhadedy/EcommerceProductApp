<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="item"
            type="com.jumia.myapplication.domain.Product" />


    </data>

    <FrameLayout
        android:id="@+id/storeStatuscl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:background="@drawable/ic_promoted_bg"
        tools:visibility="visible"
        android:paddingStart="13dp"
        android:paddingEnd="15dp"
        android:visibility="@{item.isPromoOffer ?View.VISIBLE:View.GONE}"
        android:background="@drawable/ic_promoted_bg"
        android:paddingTop="4dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/tv_busy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:includeFontPadding="false"
            tools:text="@string/promoted"
            android:text="@string/promoted"
            android:textColor="@color/outrageous_orange"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,SpUsage" />


    </FrameLayout>
</layout>
