<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="item"
            type="com.jumia.myapplication.domain.Product" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:clipToPadding="true"
        android:layoutDirection="locale"
        app:cardBackgroundColor="@color/color_card_food_item"
        app:cardCornerRadius="12.5dp"
        app:cardElevation="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="locale">

            <ImageView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_place_holder_store_bg"
                android:visibility="visible"
                app:error="@{@drawable/ic_place_holder_store_bg}"
                app:image2="@{ item.image}"
                app:isProgress="@{true}"
                app:layout_constraintTop_toTopOf="parent"
                app:placeholder="@{@drawable/ic_place_holder_store_bg}"


                />

            <ImageView
                android:id="@+id/coverShadow"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/menu_item_gredient"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="parent" />


            <include
                layout="@layout/layout_promoted_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:item="@{item}"
                android:visibility="@{item.isPromoOffer  ?View.VISIBLE:View.GONE}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <include
                layout="@layout/layout_resturant_closed_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:item="@{item.store}"
                android:visibility="@{item.isPromoOffer  ?View.GONE : View.VISIBLE}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cardLogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="8dp"
                android:elevation="12dp"
                android:visibility="visible"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="@id/cover"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/driver_profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/kfc1"
                    android:visibility="visible"
                    app:imageUrl="@{item.store.logo}"
                    app:srcCompat="@drawable/kfc1" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                android:gravity="start"
                android:includeFontPadding="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="@{item.store.name}"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/cardLogo"
                app:layout_constraintTop_toTopOf="@+id/cardLogo"
                tools:text="Al-Baik" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:includeFontPadding="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="@{item.store.categoryDisc}"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:transitionName="FlickerText"
                app:layout_constraintStart_toStartOf="@+id/name"
                app:layout_constraintTop_toBottomOf="@+id/name"
                tools:ignore="HardcodedText,SmallSp"
                tools:text="Burger . Fast Food" />

            <ImageView
                android:id="@+id/starIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:background="@drawable/ic_star_menu"
                android:contentDescription="@null"
                app:layout_constraintBottom_toBottomOf="@id/name"
                app:layout_constraintStart_toEndOf="@id/name"
                app:layout_constraintTop_toTopOf="@id/name" />

            <TextView
                android:id="@+id/tvRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@{String.valueOf(item.rate)}"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/starIcon"
                app:layout_constraintStart_toEndOf="@id/starIcon"
                app:layout_constraintTop_toTopOf="@+id/starIcon"
                tools:ignore="SmallSp"
                tools:text="4.9" />


            <include
                android:id="@+id/includeSpecialOffer"
                layout="@layout/layout_special_offer_badge"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="30dp"
                android:visibility="@{item.isSpecialOffer ?View.VISIBLE :View.GONE }"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <include
                android:id="@+id/includeFreeDelivery"
                layout="@layout/layout_free_delivery_badge"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:visibility="@{item.deliveryFee == 0.0 &amp; !item.isSpecialOffer  ?View.VISIBLE:View.GONE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/icons_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cover">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:contentDescription="@null"
                        android:layout_gravity="center"
                        android:src="@drawable/heart" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="@{String.valueOf(item.likes) + ` ` + @string/k}"
                        android:textColor="@color/dim_gray"
                        android:textSize="11sp"
                        tools:ignore="HardcodedText"
                        tools:text="30 Min" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:background="@color/manatee"
                        android:visibility="invisible" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:contentDescription="@null"
                        android:src="@drawable/iv_share" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="@{String.valueOf(item.shares)}"
                        android:textColor="@color/dim_gray"
                        android:textSize="11sp"
                        tools:ignore="HardcodedText"
                        tools:text="30 Min" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:background="@color/manatee"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:contentDescription="@null"
                        android:paddingTop="2dp"
                        android:src="@drawable/time_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="@{item.store.address.timeTo}"
                        android:textColor="@color/dim_gray"
                        android:textSize="11sp"
                        tools:ignore="HardcodedText"
                        tools:text="30 Min" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:background="@color/manatee"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:contentDescription="@null"
                        android:paddingTop="2dp"
                        android:src="@drawable/delivery_1_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="@{String.valueOf(item.deliveryFee) + ` $`}"
                        android:textColor="@{item.deliveryFee ==0.0? @color/yellow_green :@color/dim_gray}"
                        android:textSize="11sp"
                        tools:ignore="HardcodedText"
                        tools:text="10 SAR" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="@color/manatee"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:contentDescription="@null"
                        android:paddingTop="2dp"
                        android:src="@drawable/ic_location_menu_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:maxLines="1"
                        android:text="@{item.store.address.distanceTo}"
                        android:textColor="@color/dim_gray"
                        android:textSize="11sp"
                        tools:ignore="HardcodedText"
                        tools:text="5 km away" />
                </LinearLayout>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>